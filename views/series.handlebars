{{> nav_sidebar}}

<div class="container">
    <div class="content-container">
        <div class="sec-1">
            <div>
                <div class="featured-image">
                    <img src="/static/img/{{main_image}}" alt="{{title}} image"/>
                </div>
                <div class="info">
                    <div class="title_genre">
                        <h1 class="title">{{title}} ({{release_year}})</h1>
                        <ul class="genr">
                            <li>
                                {{#each genres}}
                                    <a href="/series?genre={{this.slug}}">{{this.genre}}</a>{{#unless @last}}, {{/unless}}
                                {{/each}}
                            </li>
                            <li>{{time_length}}</li>
                        </ul>
                    </div>
                    <div class="overview">
                        <h3 class="inOneLine">{{tagline}}</h3>
                        <h3 class="heading">Overview</h3>
                        <p class="overview-text">
                            {{storyline}}
                        </p>
                        <h3 class="heading">Cast</h3>
                        <div class="cast-list">
                            <ul class="actors_actress">
                                {{#each actors}}
                                    <li>
                                        <img src="/static/img/{{this.image}}" alt="{{this.image}}"/>
                                        <a href="/actor/{{this.slug}}">
                                            <h4 class="actor-name">{{this.name}}</h4>
                                        </a>
                                    </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="sec-2">
            <div class="currentSeason">
                <h2>Current Season</h2>
                {{#each currentSeason}}
                    <div>
                        <img class="currentSImage" src="/static/img/{{this.image}}" alt="{{this.image}}">
                        <div class="currentSDetails">
                            <h3>Season {{this.sNo}} | {{this.noOfEpisodes}} Episodes | {{this.releaseYr}}</h3>
                            <p>{{this.short_desc}} ...</p>
                        </div>
                    </div>
                {{/each}}
            </div>
            <div class="seasonList">
                <dl class="accordion collapsable viewSeasons">
                    <dt>View all seasons<i class="material-icons">chevron_right</i></dt>
                    <dd>
                        <dl class="accordion collapsable">
                            {{#each seasons}}
                                <dt>Season {{this.sNo}}<i class="material-icons">chevron_right</i></dt>
                                <dd>
                                    <div class="seasonDetails">
                                        <img class="currentSImage" src="/static/img/{{this.image}}" alt="{{this.image}}">
                                        <div class="currentSDetails">
                                            <h3>Season {{this.sNo}} | {{this.noOfEpisodes}} Episodes | {{this.releaseYr}}</h3>
                                            <p>{{this.desc}}</p>
                                        </div>
                                    </div>
                                    <dl class="accordion collapsable">
                                        {{#each this.episodes}}
                                            <dt>Episode {{this.eNo}}<i class="material-icons">chevron_right</i></dt>
                                            <dd>
                                                <h3>{{this.title}}</h3>
                                                <p>{{this.desc}}</p>
                                                <div class="watch_btn_group">
                                                    <a
                                                            href="{{this.link}}"
                                                            target="_blank"
                                                            rel="noopener noreferrer external"
                                                    ><img class="play" src="/static/img/play1.png" alt="play"/> Watch Now</a>
                                                </div>
                                            </dd>
                                        {{/each}}
                                    </dl>
                                </dd>
                            {{/each}}
                        </dl>
                    </dd>
                </dl>
            </div>
            <h2 class="recommended">Recommendations</h2>
            <div class="recommendedlist">
                {{#each recommendations}}
                    <div class="item">
                        <a href="/movie/{{this.slug}}">
                            <img src="/static/img/{{this.image}}" alt="{{this.image}}"/>
                        </a>
                        <h4><a href="{{this.slug}}">{{this.title}}</a></h4>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
